{
  "name": "@cloudify/cli",
  "version": "1.0.0",
  "description": "Cloudify CLI - Deploy and manage your projects from the command line. A production-ready deployment platform alternative to Vercel.",
  "main": "dist/index.js",
  "bin": {
    "cloudify": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cloudify",
    "deployment",
    "cli",
    "vercel-alternative",
    "hosting",
    "serverless",
    "edge-functions",
    "kv-store",
    "blob-storage",
    "deploy"
  ],
  "author": "Cloudify",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tranthachnguyen/cloudify",
    "directory": "packages/cli"
  },
  "homepage": "https://cloudify.tranthachnguyen.com",
  "bugs": {
    "url": "https://github.com/tranthachnguyen/cloudify/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "inquirer": "^9.2.15",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1",
    "tar": "^7.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@types/tar": "^6.1.11",
    "@types/ws": "^8.5.10",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
